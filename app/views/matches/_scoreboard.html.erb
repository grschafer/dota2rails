
<div class="col-md-2">
  <p>Match ID: <%= @match['match_id'] %></p>
</div>
<div class="col-md-2">
  <p>Duration: <%= sec_to_hms(@match['duration']) %></p>
</div>
<div class="col-md-4">
  <p>Winner: <%= @match['radiant_win'] ? @match['radiant_name'] : @match['dire_name'] %></p>
</div>
<div class="col-md-4">
  <p>Date: <%= unix_to_rfc822(@match['start_time']) %></p>
</div>

<br />

<% [@match['players'][0..4], @match['players'][5..9]].each_with_index do |players, idx| %>
  <h3><%= idx == 0 ? @match['radiant_name'] : @match['dire_name'] %></h3>
  <table class="table">
    <thead>
      <tr>
        <th>Player</th>
        <th>Hero</th>
        <th>Level</th>
        <th>K</th>
        <th>D</th>
        <th>A</th>
        <th colspan="6">Items</th>
        <th>Gold</th>
        <th>LH</th>
        <th>D</th>
        <th>Gold/Min</th>
        <th>XP/Min</th>
      </tr>
    </thead>
    <tbody id="<%= idx == 0 ? "radiant_players" : "dire_players" %>">
      <% for player in players %>
        <tr>
          <td><%= player['account_id'] %></td>
          <td><%= player['level'] %></td>
          <td><%= player['hero_id'] %></td>
          <td><%= player['kills'] %></td>
          <td><%= player['deaths'] %></td>
          <td><%= player['assists'] %></td>
          <td><%= player['item_0'] %></td>
          <td><%= player['item_1'] %></td>
          <td><%= player['item_2'] %></td>
          <td><%= player['item_3'] %></td>
          <td><%= player['item_4'] %></td>
          <td><%= player['item_5'] %></td>
          <td><%= player['gold'] %></td>
          <td><%= player['last_hits'] %></td>
          <td><%= player['denies'] %></td>
          <td><%= player['gold_per_min'] %></td>
          <td><%= player['xp_per_min'] %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>


