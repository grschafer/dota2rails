
<div class="col-md-2">
  <p>Match ID: <%= @match['match_id'] %></p>
</div>
<div class="col-md-2">
  <p>Duration: <%= sec_to_hms(@match['duration']) %></p>
</div>
<div class="col-md-4">
  <p>Winner: <%= @match['radiant_win'] ? @match['radiant_name'] : @match['dire_name'] %></p>
</div>
<div class="col-md-4">
  <p>Date: <%= unix_to_rfc822(@match['start_time']) %></p>
</div>

<br />

<% [@match['players'][0..4], @match['players'][5..9]].each_with_index do |players, idx| %>
  <h3><%= idx == 0 ? @match['radiant_name'] : @match['dire_name'] %></h3>
  <table class="table table-condensed">
    <thead>
      <tr>
        <th>Player</th>
        <th>Hero</th>
        <th>Level</th>
        <th>K</th>
        <th>D</th>
        <th>A</th>
        <th colspan="6">Items</th>
        <th>Gold</th>
        <th>LH</th>
        <th>D</th>
        <th>GPM</th>
        <th>XPM</th>
      </tr>
    </thead>
    <tbody id="<%= idx == 0 ? "radiant_players" : "dire_players" %>">
      <% for player in players %>
        <tr>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>


