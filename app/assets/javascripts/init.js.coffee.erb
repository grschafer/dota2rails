window.DOTA2RAILS =
  common: {}
  matches: {}

# http://viget.com/inspire/extending-paul-irishs-comprehensive-dom-ready-execution
UTIL =
  exec: (controller, action) ->
    ns = window.DOTA2RAILS
    action = if action is undefined then "init" else action
    if controller isnt "" and ns[controller] and typeof ns[controller][action] == "function"
      ns[controller][action]();

  init: ->
    body = document.body
    controller = body.getAttribute "data-controller"
    action = body.getAttribute "data-action"

    UTIL.exec "common"
    UTIL.exec controller
    UTIL.exec controller, action

jQuery(document).ready UTIL.init
# turbolinks event
jQuery(document).on 'page:load', UTIL.init
